<Window x:Class="Demo.Ppage.DeleteItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo.Ppage"
        mc:Ignorable="d"
        Title="DeleteItemWindow" Icon="\products\ff.ico" Height="250" Width="450">
    <Grid>
        <Label Content="Вы действительно хотите удалить?" HorizontalAlignment="Center" FontSize="24"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="NoBtn" Content="Нет" Margin="5" Height="30" Width="100" FontSize="20" Click="NoBtn_Click" BorderBrush="#FF00CC76" Background="#FF00CC76"/>
            <Button x:Name="YesBtn" Content="Да" Margin="5" Height="30" Width="100" FontSize="20" Click="YesBtn_Click" Background="#FF00CC76" BorderBrush="#FF00CC76"/>
        </StackPanel>
    </Grid>
</Window>
